<UserControl
    x:Class="BiliBili_UWP.Components.Widgets.CheckButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BiliBili_UWP.Components.Widgets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid>
            <Button IsEnabled="{x:Bind IsEnabled,Mode=OneWay}" Style="{StaticResource DefaultGhostCircleButtonStyle}" VerticalAlignment="Center"
                Content="{x:Bind Icon,Mode=OneWay}" Click="Button_Click" x:Name="HandleButton" Width="35" Height="35" HorizontalAlignment="Center"
                    />
        </Grid>
        
        <TextBlock VerticalAlignment="Center" Text="{x:Bind Text,Mode=OneWay}" Grid.Column="1" Margin="8,0,0,0" Style="{StaticResource SmallTipTextStyle}" Foreground="{ThemeResource NormalTextColor}"/>
    </Grid>
</UserControl>
